<% layout('layouts/boilerplate') %>
    <h1>EDIT PAGE!</h1>
    <form action="/index/<%= content._id %>?_method=PUT" method="POST">
        <label for="title">Title</label>
        <input type="text" id="title" name="board[title]" value="<%= content.title %>" required>

        <label for="mainText">Text</label>
        <textarea id="mainText" cols="30" rows="10" name="board[mainText]" required><%= content.mainText %></textarea>

        <button>update content!</button>
    </form>
    <a href="/index/<%= content._id %>">back to content</a>
