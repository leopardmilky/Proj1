<% layout('layouts/boilerplate') %>
<div class="container d-flex flex-column align-items-center border border-danger">
    <div class="row w-75 border border-info">
        <h1 class="text-center">EDIT PAGE!</h1>
    </div>
    <div class="row w-75 border border-info">
        <form class="d-flex flex-column align-items-center" action="/index/<%= content._id %>?_method=PUT" method="POST">
            <label class="w-75" for="title">Title</label>
            <input class="w-75" type="text" id="title" name="board[title]" value="<%= content.title %>" required>
    
            <label class="w-75" for="mainText">Text</label>
            <textarea class="w-75" id="mainText" cols="30" rows="10" name="board[mainText]" required><%= content.mainText %></textarea>
    
            <button class="w-75 mt-2">update content!</button>
        </form>
    </div>
    <div class="row w-75 border border-info mt-4">
        <a class="text-center" href="/index/<%= content._id %>">back to content</a>
    </div>
</div>

