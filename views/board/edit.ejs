<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/index.css">
</head>
<body class="d-flex flex-column vh-100 border border-danger">
<%- include('../partials/navbar') %>
<div class="container d-flex flex-column align-items-center mt-5 border border-danger">
    <div class="row w-75 border border-info">
        <h1 class="text-center">EDIT PAGE!</h1>
    </div>
    <div class="row w-75 border border-info">
        <form class="d-flex flex-column align-items-center validated-form" action="/index/<%= content._id %>?_method=PUT" method="POST" novalidate>
            <label class="form-label w-100" for="title">Title</label>
            <input class="form-control w-100" type="text" id="title" name="board[title]" value="<%= content.title %>" required>
    
            <label class="form-label w-100" for="mainText">Text</label>
            <textarea class="form-control w-100" id="mainText" cols="30" rows="10" name="board[mainText]" required><%= content.mainText %></textarea>
    
            <button class="w-100 mt-2 btn btn-success btn-sm">update content!</button>
        </form>
    </div>
    <div class="row w-75 justify-content-center border border-info mt-4">
        <div class="row d-inline w-100 border border-success p-0">
            <a class="text-center" href="/index/<%= content._id %>">back to content</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>