<% layout('layouts/boilerplate') %>
<div class="container d-flex flex-column align-items-center mt-5 border border-danger">
    <div class="row w-75 border border-info">
        <h1 class="text-center">create new content page!</h1>
    </div>
    <div class="row w-75 border border-info">
        <form class="d-flex flex-column align-items-center validated-form" action="/index" method="POST" novalidate> <!-- enctype="multipart/form-data" 이미지 파일 업로드시 추가... -->
            <label class="form-label w-100" for="title">Title</label>
            <input class="form-control w-100" type="text" id="title" name="board[title]" required>

            <label class="form-label w-100" for="mainText">Text</label>
            <textarea class="form-control w-100" id="mainText" cols="30" rows="10" name="board[mainText]" required></textarea>

            <!-- <input class="imageFiles mt-3 mb-3" type="file" name="image" accept="image/*" multiple> -->
            <!-- array로 이미지 여러개 업로드시 multiple추가가 필요. accept="image/*"는 보조개념 수단.. 모든파일로 select를 변경하면 이미지 외에 다른 파일도 가능. 프론트단에서 한번 더 체크 필요. -->

            <button class="w-100 mt-2 btn btn-success btn-sm">submit !</button>
        </form>
    </div>
    <div class="row w-75 justify-content-center border border-info mt-4">
        <div class="row d-inline w-100 border border-success p-0">
            <a class="text-center" href="/index">back to index page</a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/javascript/createNew.js"></script>