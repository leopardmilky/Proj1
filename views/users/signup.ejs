<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/index.css">
</head>
<body class="d-flex flex-column vh-100 border border-danger">
<%- include('../partials/navbar') %>
<form action="/signup" method="POST" class="validated-form" novalidate>
    <div class="d-flex flex-column align-items-center border border-danger">
        <h1>SIGN UP</h1>
        <div class="mb-3 w-25 border border-warning">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" autocomplete="email" required>
            <!-- <div class="btn btn-sm btn-info">Authentication</div> -->
            <span class="emailCheckMessage"></span>
        </div>
        <div class="mb-3 w-25 border border-warning">
            <label class="form-label" for="nickname">Nickname</label>
            <input class="form-control" type="text" id="nickname" name="nickname" required>
            <span class="nicknameCheckMessage"></span>
        </div>
        <div class="mb-3 w-25 border border-warning">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" autocomplete="new-password" placeholder="최소 6자리 이상" required>
            <span class="passwordCheckMessage"></span>
        </div>
        <div class="mb-3 w-25 border border-warning">
            <label class="form-label" for="confirmPwd">Confirm Password</label>
            <input class="form-control" type="password" id="confirmPwd" name="confirmPwd" autocomplete="new-password" placeholder="비밀번호 재입력" required>
            <span class="confirmPwdCheckMessage"></span>
        </div>
        <button class="w-25 btn btn-success signupBtn disabled">Sign Up</button>
    </div>
</form>
<%- include('../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/javascript/signup.js"></script>