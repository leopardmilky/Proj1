<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/index.css">
</head>
<body class="d-flex flex-column vh-100 border border-danger">
<%- include('../partials/navbar') %>
<form action="/signin?redirectUrl=<%= redirectUrl %>" method="POST" class="validated-form" novalidate>
    <div class="d-flex mt-5 flex-column align-items-center border border-danger">
        <h1>로그인</h1>
        <div class="mb-3 w-25 border border-warning">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" autocomplete="username" required>
        </div>
        <div class="mb-3 w-25 border border-warning">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" autocomplete="current-password" required>
        </div>
        <button class="w-25 btn btn-success">로그인</button>
    </div>
    <div class="d-flex mt-1 flex-column align-items-center border border-danger">
        <a id="findPwd" href="/forgotpwd">비밀번호를 잊어버렸나요?</a>
    </div>
</form>
<script>
window.onpageshow = function(event){
    if(event.persisted){
        window.location.reload();
    }
}
</script>
<%- include('../partials/footer') %>